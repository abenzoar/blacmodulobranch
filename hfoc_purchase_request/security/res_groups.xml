<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Grupo para ver solo sus propios documentos -->
        <record id="group_purchase_request_documents" model="res.groups">
            <field name="name">Solicitudes de compra por Usuario</field>
            <field name="implied_ids" eval="[(4, ref('group_purchase_request_documents'))]"/>
        </record>

        <!-- Grupo para ver todos los documentos -->
        <record id="group_purchase_request_all_documents" model="res.groups">
            <field name="name">Solicitudes de compra Todas</field>
            <field name="implied_ids" eval="[(4, ref('group_purchase_request_documents'))]"/>
        </record>

        <!-- Regla de acceso para el grupo User Own Documents -->
        <record id="access_rule_purchase_request_documents" model="ir.rule">
            <field name="name">Solicitud de compra regla de acceso a documentos propios del usuario</field>
            <field name="model_id" ref="model_purchase_requester"/>
            <field name="groups" eval="[(6, 0, [ref('group_purchase_request_documents')])]"/>
            <field name="domain_force">[('requested_by', '=', user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Regla de acceso para el grupo User All Documents -->
        <record id="access_rule_rule_purchase_reques_all_documents" model="ir.rule">
            <field name="name">Solicitud de compra regla de acceso a todos los documentos</field>
            <field name="model_id" ref="model_purchase_requester"/>
            <field name="groups" eval="[(6, 0, [ref('group_purchase_request_all_documents')])]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>

</odoo>