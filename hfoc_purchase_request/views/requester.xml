<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--             button a create tree view-->
        <record id="purchase_tree" model="ir.ui.view">
            <field name="name">purchase.requester.tree.view</field>
            <field name="model">purchase.requester</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" readonly="1"/>
                    <field name="requested_by"/>
                    <field name="approver_id" options="{'no_create_edit': True}"  />    
                    <field name="note"/>       
                    <field name="date_order"/>
                    <field name="state" optional="show" decoration-success="state == 'approve'" decoration-info="state == 'to_process'" decoration-warning="state == 'to_rectify'"  decoration-danger="state == 'rejected'"  widget="badge" />                                        
                    
                </tree>
            </field>
        </record>

        <record id="purchase_form" model="ir.ui.view">
            <field name="name">purchase.requester.form</field>
            <field name="model">purchase.requester</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        
                        <button name="make_purchase_quotation" string="Solicitar" type="object" states="draft" class="oe_highlight" /> 
                        <button name="draft_request_purchase" string="Convertir a borrador" type="object" states="to_process"  /> 
                        
                        <field name="state" widget="statusbar" statusbar_visible="rejected,draft,to_rectify,to_process,approve"/>
                   </header>
                    <sheet>
                       <div class="oe_title">
                            <span class="o_form_label" attrs="{'invisible': [('state','not in',('draft','sent'))]}">Solicitud de compra </span>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>                                
                                <field name="requested_by" options="{'no_create': True, 'no_open': True}" readonly="1"/>
                                <field name="is_editable" invisible="1"/>
                                <field name="purchase_order_id" widget="many2many_tags" readonly="1" attrs="{'invisible': [('purchase_order_id','=', False)]}"/>
                            </group>
                            <group>
                                <field name="date_order"  attrs="{'readonly': [('state','!=', 'draft')]}"  />                                
                                <field name="approver_id" attrs="{'readonly': [('state','!=', 'draft')]}"  domain="[('purchase_request_approver_id','=',True)]" options="{'no_create': True, 'no_open': True}" />
                                 <field name="company_id" groups="base.group_multi_company" required="1" readonly="1" options="{'no_create': True, 'no_open': True}" />
                            </group>
                        </group>
                        <notebook colspan="2">

                            <page string="Linea de solicitud">
                                <field name="line_ids" attrs="{'readonly': [('is_editable','=', False)]}">
                                    <tree decoration-muted="state == 'rejected'">
                                        <field name="product_id"  options="{'no_create': True, 'no_open': True}"  />
                                        <field name="name"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom_id" groups="product.group_uom"  options="{'no_create': True, 'no_open': True}"  />
                                        
                                        <button name="apply_state_to_process" icon="fa-arrow-right"  type="object" attrs="{'invisible':[('state','in', ('to_process','approve','rejected') )]}"  class="btn btn-info"  />                 
                                        
                                        <button name="payment_request" attrs="{'invisible':['|','|',('payment_state','=','payment_draft'),('detailed_type','!=', 'service' ),('state','!=', 'approve' )]}" icon="fa-dollar"  string="Solicitar " confirm="Solicite el pago del servicio cuando este conpletado, si se trata de un anticipo, divida el servicio en dos o más lineas y solicite el pago segun sea el caso." type="object"   class="btn btn-primary"  />                 
                                        
                                        <field name="payment_state"  attrs="{'invisible':[('payment_state','!=','payment_draft')]}"  readonly="1"  />
                

                                        <field name="state" readonly="1" decoration-success="state == 'approve'" decoration-info="state == 'to_process'" decoration-warning="state == 'to_rectify'"  decoration-danger="state == 'rejected'"  widget="badge"  />                                        
                                        <field name="is_editable" invisible="1"/>
                                        <field name="request_id" invisible="1"/>
                                        <field name="supplier_id" invisible="1"/> 
                                        <field name="detailed_type" invisible="1"/> 
                                        
                                                                            
                                    </tree>
                                    <form>
                                         <header>
                                             <field name="state" widget="statusbar" statusbar_visible="rejected,draft,to_rectify,to_process,approve"/>
                  
                                            <button name="apply_state_to_process" string=" Solicitar " type="object" attrs="{'invisible':[('state','in', ('to_process','approve','rejected') )]}"   class="btn btn-info"  />                 
                
                                        </header>
                                        <sheet>
                                           
                                            <group>
                                                <group>
                                                    <separator string="Información de producto solicitado"/>
                                                    <newline/>
                                                    <field name="is_editable" invisible="1"/>
                                                    <field name="product_id"  options="{'no_create': True, 'no_open': True}"  />
                                                    <field name="name"/>
                                                    <label for="product_qty" />
                                                    <div>
                                                        <field name="product_qty"
                                                               class="oe_inline"/>
                                                        <field name="product_uom_id"
                                                               groups="product.group_uom"
                                                               class="oe_inline"  options="{'no_create': True, 'no_open': True}"  />
                                                    </div>
                                                    <field name="supplier_id" invisible="1"/> 
                                                    <field name="detailed_type" invisible="1"/> 
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                                <field name="note" placeholder="Escribi aqui detalles adicionales" />
                            </page>

                         
                      </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups = "base.group_user" />
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>

                </form>
                
            </field>
        </record>   



        <record  id="purchase_kanban_view" model="ir.ui.view">
           <field name="name">purchase.requester.kanban</field>
           <field name="model">purchase.requester</field>
           <field name="arch" type="xml">
               <kanban class="o_kanban_mobile">
                   <field name="name" readonly="1" />
                   <field name="requested_by"/>
                   <field name="note"/>
                   <field name="date_order" />
                   <templates>
                       <t t-name="kanban-box">
                           <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                               <div class="o_kanban_record_top mb16">
                                   <div class="o_kanban_record_headings mt4">
                                       <strong class="o_kanban_record_title"><span><t t-esc="record.name.value"/></span></strong>
                                   </div>
                                    <strong><field name="requested_by" /></strong>
                               </div>
                               <div class="o_kanban_record_bottom">
                                   <div class="oe_kanban_bottom_left">
                                       <span><t t-esc="record.name.value"/> <t t-esc="record.date_order.value and record.date_order.value.split(' ')[0] or False"/></span>
                                   </div>
                                   <div class="oe_kanban_bottom_right">
                                       <field name="state" widget="label_selection" options="{'classes': {'rejected': 'Rechazado', 'draft': 'Borrador', 'to_rectify': ''Por rectificar', 'to_process': 'En proceso', 'approve': 'Aprobado'}}"/>
                                   </div>
                               </div>
                            </div>
                        </t>
                   </templates>
                </kanban>
            </field>
        </record>


<!-- new name adding pr0001 v-->
        <record id="seq_purchase_requester" model="ir.sequence">
            <field name="name">Solicitud de compra</field>
            <field name="code">purchase.requester</field>
            <field name="prefix">PR</field>
            <field name="padding">5</field>
            <field name="implementation">standard</field>
            <field name="company_id" eval="False"/>
            
        </record>
        
       
     <!-- button fields -->
       <record id="purchase_form_action_inherit" model="ir.actions.act_window">
            <field name="name">Solicitud de compra</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requester</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Crear una solicitud de compra
              </p>
             
            </field>
        </record>

    <menuitem action="purchase_form_action_inherit" sequence="134" web_icon="hfoc_purchase_request,static/description/menu.png" id="menu_purchase_form_action" groups="hfoc_purchase_request.group_purchase_request_documents"/>

        
</odoo>
